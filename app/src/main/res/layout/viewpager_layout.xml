<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical">



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mvcViewpager1"
        android:layout_width="500dp"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:strokeWidth="0dp"
        app:cardElevation="3dp">




        <RelativeLayout
            android:id="@+id/relativeViewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal">






        <ImageView
            android:id="@+id/imageViewpager"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_marginVertical="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/doctor"/>


            <TextView
                android:id="@+id/tvViewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewpager"
                android:text="Contact The Doctor"
                android:gravity="center_horizontal"
                android:fontFamily="@font/poppint_bold"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                android:textSize="19dp"/>

            <ImageView
                android:id="@+id/imageviewpagercall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/imageViewpager"
                android:src="@drawable/first_call"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"/>


        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>



</RelativeLayout>